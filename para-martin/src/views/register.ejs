<%- include('./partials/head.ejs') %>

<%- include('./partials/header.ejs') %>

<body>
    <main>
        
        <div class="contenedor">
            <form class="formulario" id="form"  action="/users/register" method="POST" enctype="multipart/form-data">
                <h1 class="mt-4">REGISTRATE</h1>
            
                <div class="formulario__grupo mb-3">
                    <label for="nombre" class="formulario__label">Nombre</label>
                    <div class="formulario__grupo-input">
                        <input class="formulario__input" type="text" placeholder="Nombre Completo" name="full_name">
                        <i class="formulario__validacion-estado fas fa-times-circle"></i>
                    </div>
                </div>

                
                <div class="formulario__grupo mb-3">
                    <div class="formulario__grupo-input">
                        <input class="formulario__input" type="email" placeholder="Correo Electrónico" name="email">
                        <i class="formulario__validacion-estado fas fa-times-circle"></i>
                    </div>
                </div>

                <div class="formulario__grupo mb-3">
                    <div class="formulario__grupo-input">
                        <input class="formulario__input" type="password" placeholder="Contraseña" name="password">
                        <i class="formulario__validacion-estado fas fa-times-circle"></i>
                    </div>
                </div>

                <div class="formulario__grupo mb-3">
                    <div class="formulario__grupo-input">
                        <input class="formulario__input" type="password" placeholder="Confirme contraseña" name="password_confirm">
                        <i class="formulario__validacion-estado fas fa-times-circle"></i>
                    </div>
                </div>
                
                <div class="formulario__grupo mb-3 bg-light p-3">
                    <label for="status">Status</label>
                    <select name="status" id="status" >
                        <option value="1">1</option>
                        <option value="2">2</option>
                    </select>
                </div>

            
                <br>
                <div class="formulario__grupo mb-3 bg-light p-3">
                    <label for="users_category">Elige tu Rol</label>
                    <select name="users_category" id="category" >
                        <option value="2">Usuario</option>
                        <option value="1">Administrador</option>
                    </select>
                </div>
                <div class="bg-light p-3">
                    <br>        
                        <h4>Elegí tu foto de usuario</h4>
                        <input type="file" name="image">
                    <br>    
                </div>    
                <div class="d-flex allign-items-center p-0 m-2 ">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input m-0 " value="1" name="acepta_condiciones"><p class="m-0 pl-1"> Acepta nuestras Condiciones de uso y Política de privacidad</p>
                    </label>
                </div> 
                <% if (locals.errors){ %> 
                    <div class="formulario__mensaje ">
                        <h5 class="pt-2">Error en los campos</h5>
                        <ul class="formMsg  p-4">
                            <% errors.forEach(error =>{ %> 
                            <li><%= error.msg; %></li>   
                            <% }) %>
                        </ul>
                    </div>
                <% } %> 
                <input type="submit" value="REGISTRATE" class="button">
            </form>
        </div>
    </main>    
    <%- include('./partials/footer.ejs') %>
</body>
</html>
    